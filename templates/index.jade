{% block content %}
section.home.container
  form(action="/lista", method="get", class="finder box u-full-width row")
    div.four.columns
      h4.finder-title Ubicaci√≥n
      div.finder-box
        input(type="text", placeholder="Nombre casa", class="form-input", name="name")
        i.fa.fa-home
      div.finder-box
        input(type="text", placeholder="Ciudad", class="form-input city-input", name="city")
        i.fa.fa-building
    div.three.columns
      h4.finder-title Fechas
      div.finder-box
        input(type="text", placeholder="Fecha inicio", class="form-input", id="busqueda_fechaInicio")
        i.fa.fa-calendar
      div.finder-box
        input(type="text", placeholder="Fecha fin", class="form-input", id="busqueda_fechaFin")
        i.fa.fa-calendar
    div.three.columns
      h3.finder-title Precio
      input(type="range", style="width: 100%")
    div.two.columns
      h4.finder-title Confirmar
      button(type="submit", class="button-primary") Buscar casa
      
div.results
{% endblock%}
